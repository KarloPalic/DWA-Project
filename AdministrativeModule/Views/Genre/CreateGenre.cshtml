@model AdministrativeModule.Models.GenreManagement

<h2>Create Genre</h2>

<form asp-controller="Genre" asp-action="CreateGenre" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name">Genre Name:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span><br />

        <label asp-for="Description">Genre Description:</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span><br />
    </div>

    <button type="submit" class="btn btn-primary">Create Genre</button>
</form>
